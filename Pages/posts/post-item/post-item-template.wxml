<template name="postItem">
  <view class='post-container'>
    <view class='post-author-date'>
      <image class='post-author' src='{{item.headImgSrc}}'></image>
      <text class='post-date'>{{item.author}}</text>
      <text class='post-date'>{{item.date}}</text>
    </view>
    <view>
      <text class='post-title'>{{item.title}} </text>
      <image class='post-image' src='{{item.imgSrc}}'></image>
      <text class='post-content'>{{item.content}}</text>
    </view>
    <view class='post-like'>
      <image class='post-like-image' src='../../img/icon/chat.png'></image>
      <text class='post-like-text'>{{item.collection}}</text>
      <image src='../../img/icon/view.png' class='post-like-image'></image>
      <text class='post-like-text'>{{item.reading}}</text>
    </view>
  </view>
</template>